<%- model_class = Pokemonset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:specie) %></th>
      <th><%= model_class.human_attribute_name(:hp) %></th>
      <th><%= model_class.human_attribute_name(:atk) %></th>
      <th><%= model_class.human_attribute_name(:def) %></th>
      <th><%= model_class.human_attribute_name(:spatk) %></th>
      <th><%= model_class.human_attribute_name(:spdef) %></th>
      <th><%= model_class.human_attribute_name(:spd) %></th>
      <th><%= model_class.human_attribute_name(:item) %></th>
      <th><%= model_class.human_attribute_name(:nature) %></th>
      <th><%= model_class.human_attribute_name(:ability) %></th>
      <th><%= model_class.human_attribute_name(:move1) %></th>
      <th><%= model_class.human_attribute_name(:move2) %></th>
      <th><%= model_class.human_attribute_name(:move3) %></th>
      <th><%= model_class.human_attribute_name(:move4) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pokemonsets.each do |pokemonset| %>
      <tr>
        <td><%= link_to pokemonset.id, pokemonset_path(pokemonset) %></td>
        <td><%= Pokemon.find_by(:local_language_id => 9, :pokemon_species_id => pokemonset.specie).name %></td>
        <td><%= pokemonset.hp %></td>
        <td><%= pokemonset.atk %></td>
        <td><%= pokemonset.def %></td>
        <td><%= pokemonset.spatk %></td>
        <td><%= pokemonset.spdef %></td>
        <td><%= pokemonset.spd %></td>
        <td><%= Item.find_by(:local_language_id => 9, :item_id => pokemonset.item).name %></td>
        <td><%= Nature.find_by(:local_language_id => 9, :nature_id => pokemonset.nature).name %></td>
        <td><%= Ability.find_by(:local_language_id => 9, :ability_id => pokemonset.ability).name %></td>
        <td><%= Move.find_by(:local_language_id => 9, :move_id => pokemonset.move1).name %></td>
       <td><%= Move.find_by(:local_language_id => 9, :move_id => pokemonset.move2).name %></td>
       <td><%= Move.find_by(:local_language_id => 9, :move_id => pokemonset.move3).name %></td>
       <td><%= Move.find_by(:local_language_id => 9, :move_id => pokemonset.move4).name %></td>
        <td><%= pokemonset.comment %></td>
        <td><%=l pokemonset.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pokemonset_path(pokemonset), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pokemonset_path(pokemonset),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pokemonset_path,
            :class => 'btn btn-primary' %>

<% end %>
  <strong><%= model_class.human_attribute_name(:comment) %>:</strong>
  <%= @pokemonset.comment %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pokemonsets_path, :class => 'btn'  %>
  

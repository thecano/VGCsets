<%- model_class = Pokemonset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:specie) %>:</strong></dt>
  <dd><%= @pokemonset.specie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hp) %>:</strong></dt>
  <dd><%= @pokemonset.hp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:atk) %>:</strong></dt>
  <dd><%= @pokemonset.atk %></dd>
  <dt><strong><%= model_class.human_attribute_name(:def) %>:</strong></dt>
  <dd><%= @pokemonset.def %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spatk) %>:</strong></dt>
  <dd><%= @pokemonset.spatk %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spdef) %>:</strong></dt>
  <dd><%= @pokemonset.spdef %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spd) %>:</strong></dt>
  <dd><%= @pokemonset.spd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item) %>:</strong></dt>
  <dd><%= @pokemonset.item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nature) %>:</strong></dt>
  <dd><%= @pokemonset.nature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ability) %>:</strong></dt>
  <dd><%= @pokemonset.ability %></dd>
  <dt><strong><%= model_class.human_attribute_name(:move1) %>:</strong></dt>
  <dd><%= @pokemonset.move1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:move2) %>:</strong></dt>
  <dd><%= @pokemonset.move2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:move3) %>:</strong></dt>
  <dd><%= @pokemonset.move3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:move4) %>:</strong></dt>
  <dd><%= @pokemonset.move4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @pokemonset.comment %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pokemonsets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pokemonset_path(@pokemonset), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pokemonset_path(@pokemonset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

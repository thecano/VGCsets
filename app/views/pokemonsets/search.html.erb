Busqueda avanzada:
<%= form_tag process_search_pokemonset_path(), :method => 'post' do %>
  <%= collection_select(:specie, :id, Pokemon.order('name').where(:local_language_id => 9), :id, :name, prompt: "Cualquier especie") %>
  <%= collection_select(:item, :id, Item.order('name').where(:local_language_id => 9), :id, :name, prompt: "Cualquier objeto") %>
  <%= collection_select(:ability, :id, Ability.order('name').where(:local_language_id => 9), :id, :name, prompt: "Cualquier habilidad") %>
  <%= collection_select(:nature, :id, Nature.order('name').where(:local_language_id => 9), :id, :name, prompt: "Cualquier naturaleza") %>
  <%= submit_tag "Filtrar", :name => nil, :class => "search-me btn btn-primary"  %>
<% end %>


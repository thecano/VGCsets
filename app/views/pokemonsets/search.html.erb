<%= t("search_desc.title") %>
<%= form_tag process_search_pokemonset_path(), :method => 'get' do %>
  <%= collection_select(:specie, :id, Pokemon.order('name').where(:local_language_id => 9), :id, :name, prompt: t("search_desc.specie")) %>
  <%= collection_select(:item, :id, Item.order('name').where(:local_language_id => 9), :id, :name, prompt: t("search_desc.item")) %>
  <%= collection_select(:ability, :id, Ability.order('name').where(:local_language_id => 9), :id, :name, prompt: t("search_desc.ability")) %>
  <%= collection_select(:nature, :id, Nature.order('name').where(:local_language_id => 9), :id, :name, prompt: t("search_desc.nature")) %>
  <%= submit_tag t("search_desc.filter") , :name => nil, :class => "search-me btn btn-primary"  %>
<% end %>
<%= t("search.description")%>
<br>
 <% @existing_pokemon.each do |pokemon| %>
    
 <%= link_to(
 image_tag("/sprites/"+pokemon.name.downcase.tr(" ", "-").tr(".", "").tr("'", "").tr("é", "e")+".png"), "/pokemonsets/specie/"+pokemon.name.downcase.tr(" ", "-").tr(".", "").tr("'", "").tr("é", "e") )%>
<% end %>


 <%= paginate @existing_pokemon , :theme => 'twitter-bootstrap',
                   :pagination_class => "pagination-centered" %>
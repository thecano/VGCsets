
  <h3>Contact</h3>
<div class="span5">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true, :input_html => {class: 'row-fluid', rows: '5'} %>
    <div class= "invisible">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      <%= f.button :submit,  t("contact_desc.submit"), :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>
